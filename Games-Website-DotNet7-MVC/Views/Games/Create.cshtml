@model CreateGameFormViewModel

@{
    ViewData["Title"] = "Create Game";
}

<h5>Add A New Game</h5>

<form asp-controller="Games" asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Game Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option>--- Select a category ---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices">
                    <option>--- Select devices ---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea class="form-control" asp-for="Description" placeholder="Enter Game Description"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover">
                <span asp-validation-for="Cover" class="text-danger"></span>
                <small class="form-text text-muted">Only PNG,JPG,JPEG images extention.</small>

            </div>
            <button type="submit" class="btn btn-light text-black mt-2">Save</button>
        </div>
        <div class="col-md-6"></div>
    </div>
</form>

